set backspace=indent,eol,start
set clipboard=unnamedplus,unnamed
set whichwrap=b,s,h,l,<,>,[,]

set incsearch
set ignorecase
set smartcase
set hlsearch

nnoremap n nzvzz
nnoremap N Nzvzz

nnoremap j  gj
nnoremap k  gk
nnoremap 0  g0
nnoremap g0 0
nnoremap $  g$
nnoremap g$ $
nnoremap gg ggzvzz
nnoremap G  Gzvzz

" https://msdn.microsoft.com/ja-jp/library/da5kh0wa.aspx

nnoremap t         :vsc Edit.CommentSelection<CR>
vnoremap t         :vsc Edit.CommentSelection<CR>
nnoremap gcc       :vsc Edit.CommentSelection<CR>

nnoremap <C-o>     :vsc View.NavigateBackward<CR>
nnoremap <C-i>     :vsc View.NavigateForward<CR>
nnoremap <C-]>     :vsc ReSharper.ReSharper_GotoDeclaration<CR>
nnoremap <Space>gg :vsc Edit.Find<CR>

nnoremap ;r        :vsc Debug.Start<CR>
nnoremap ;R        :vsc Debug.StartWithoutDebugging<CR>
nnoremap ;b        :vsc Debug.ToggleBreakpoint<CR>

nnoremap ;e        :vsc ReSharper.ReSharper_Rename<CR>
nnoremap ;f        :vsc ReSharper.ReSharper_CleanupCode<CR>


